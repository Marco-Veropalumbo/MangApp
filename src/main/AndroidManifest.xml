<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.uniparthenope.studenti.marco.veropalumbo001.mangapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MangApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".LoginActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".SignupFillActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".NewVolumesActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".SettingsActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".AllVolumesActivity" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
        <activity android:name=".ActivityCarrello" android:label="@string/app_name" android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>